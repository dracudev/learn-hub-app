<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LearnHub | <%= title %></title>

    <!-- SEO Meta Tags -->
    <meta
      name="description"
      content="Dynamic learning pathways that your students deserve. Discover comprehensive courses in programming, web development, and more on LearnHub."
    />
    <meta
      name="keywords"
      content="online learning, courses, programming, javascript, web development, education, tutorials, skills"
    />
    <meta name="author" content="LearnHub" />
    <meta name="robots" content="index, follow" />
    <link
      rel="canonical"
      href="<%= typeof canonicalUrl !== 'undefined' ? canonicalUrl : 'https://dracudev-learnhub-app.vercel.app' %>"
    />

    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="LearnHub | <%= title %>" />
    <meta
      property="og:description"
      content="Dynamic learning pathways that your students deserve. Discover comprehensive courses in programming, web development, and more."
    />
    <meta
      property="og:url"
      content="<%= typeof canonicalUrl !== 'undefined' ? canonicalUrl : 'https://dracudev-learnhub-app.vercel.app' %>"
    />
    <meta property="og:image" content="/images/mockup.png" />
    <meta property="og:site_name" content="LearnHub" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="LearnHub | <%= title %>" />
    <meta
      name="twitter:description"
      content="Dynamic learning pathways that your students deserve. Discover comprehensive courses in programming, web development, and more."
    />

    <!-- Additional SEO Meta Tags -->
    <meta name="theme-color" content="#6366f1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="LearnHub" />

    <!-- CSS Reset and Preload -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />

    <!-- Font Awesome Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- Custom Stylesheets -->
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
</html>
